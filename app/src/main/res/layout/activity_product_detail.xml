<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shoppers.www.hackerramp.ProductDetail">

        <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footer"
        android:fillViewport="true"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">
            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout"
            android:weightSum="1">

            <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Demo Item"
            android:typeface="serif"
            android:textStyle="normal|bold"
            android:textSize="22dp" />
            <ImageView
            android:layout_width="fill_parent"
            android:layout_height="300dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dip"
            android:contentDescription="TODO"
            android:src="@drawable/ic_launcher"/>
            <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Product Description"
            android:textStyle="bold"
            android:textSize="19dp"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
            <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#444444" />
            <TextView
            android:textSize="16dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Product Description \nkjfdn kas kfdsn knfdsak nkdsa nfksa nfksadnf ksadjn kdsan kjdsan kfndsa kdsan ksafngi nbgsa"
            android:textStyle="normal"
            android:id="@+id/prodDescription"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

            <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            />

            <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Deposit Amount"
            android:textStyle="bold"
            android:textSize="19dp"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#444444" />
            <TextView
            android:textSize="16dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="500"
            android:textStyle="normal"
            android:id="@+id/prodDescription"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
            <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            />
            <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Rent"
            android:textStyle="bold"
            android:textSize="19dp"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
            <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#444444" />
            <TextView
            android:textSize="16dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Rs 100 per day"
            android:textStyle="normal"
            android:id="@+id/prodDescription"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/footer"
            android:background="#ffff00"
            android:layout_alignParentBottom="true">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Borrow Now"
                android:backgroundTint="#127645"
                android:background="#127656"
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:textAllCaps="false"/>
        </RelativeLayout>


</RelativeLayout>
