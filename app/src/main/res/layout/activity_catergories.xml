<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/categoryLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:stretchColumns="1">


    <TableRow android:id="@+id/categoryRow1"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >
        <Button
            android:id="@+id/shoes"
            android:text="@string/shoes"
            android:background="@drawable/bag"
            android:onClick="showShoeCatogeryList"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
                android:layout_height="match_parent"
            android:layout_width="0dip"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="20dp" />
        <Button
            android:id="@+id/bags"
            android:text="@string/bags"
            android:background="@drawable/bag"
            android:onClick="showBagCatogeryList"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:layout_height="match_parent"
            android:layout_width="0dip"
            android:textStyle="bold"
            android:textSize="20dp" />
    </TableRow>


    <TableRow
        android:id="@+id/categoryRow2"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"

        >
        <Button
            android:id="@+id/watches"
            android:text="@string/watches"
            android:background="@drawable/bag"
            android:layout_weight="1"
            android:onClick="showWatchCatogeryList"
            android:gravity="bottom|center_horizontal"
            android:layout_height="match_parent"
            android:layout_width="0dip"
            android:textStyle="bold"
            android:textSize="20dp" />
        <Button
            android:id="@+id/misc"
            android:text="@string/misc"
            android:onClick="showMiscCatogeryList"
            android:background="@drawable/bag"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:layout_height="match_parent"
            android:layout_width="0dip"
            android:textStyle="bold"
            android:textSize="20dp" />

    </TableRow>

</TableLayout>
